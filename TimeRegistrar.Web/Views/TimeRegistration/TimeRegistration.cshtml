@model TimeRegistrar.Web.ViewModels.TimeRegistrationViewModel

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-inline row">
        <div class="form-group col-md-2">
            <div class="input-group">
                @Html.LabelFor(model => model.ProjectName, htmlAttributes: new { @class = "sr-only" })
                @Html.HiddenFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.DisplayFor(model => model.ProjectName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group col-md-2">
            <div class="input-group">
                @Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "sr-only" })
                @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-2">
            <div class="input-group">
                @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "sr-only" })
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ProjectId)
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}